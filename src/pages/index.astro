---
import Layout from "../layouts/Layout.astro";
import Appearances from "@components/Appearances";
import FeaturedProjects from "@components/FeaturedProjects";
import { Image } from "astro:assets";
import avatar from "@images/avatar.png";
---

<Layout>
  <!-- Hero -->
  <section>
    <div class="max-w-[700px]">
      <div class="pt-8 pb-10">
        <Image
          class="mb-5 rounded-full"
          src={avatar}
          width={56}
          height={56}
          priority
          alt="Avatar"
        />
        <h1 class="h1 font-aspekta mb-5">
          I create content around <span
            class="relative inline-flex text-sky-500 before:absolute before:inset-0 before:-z-10 before:translate-y-1/4 before:-rotate-2 before:bg-sky-200 before:opacity-30 dark:before:bg-sky-500"
            >Programming & Productivity</span
          > Tips.
        </h1>
        <p class="text-lg text-slate-500 dark:text-slate-400">
          Software developer and writer focused on front-end and accessibility.
          I share tips, tools, and tutorials to help you build better and work
          more efficiently.
        </p>
      </div>
    </div>
  </section>

  <!-- Content -->
  <div class="grow space-y-8 pb-16 md:flex md:space-y-0 md:space-x-8 md:pb-20">
    {/* Middle area */}
    <div class="grow">
      <div class="max-w-[700px]">
        <div class="space-y-10">
          <section>
            <h2 class="font-aspekta mb-3 text-xl font-[650]">
              Recent Blog Posts
            </h2>
          </section>

          <Appearances />
          <FeaturedProjects />

          {/* Articles list */}
          <!--  <div>
                  {allBlogs.map((post, postIndex) => (
                      <PostItem key={postIndex} {...post} />
                  ))}
                </div>

            </div> -->
        </div>
      </div>
    </div>
  </div>
</Layout>
